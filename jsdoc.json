{
    "recurseDepth": 2,
    
    "source": {
        "include": ["./lib"], 
        "includePattern": "\\.(jsx|js)$"
    },
    
    "opts" : {
        "encoding": "utf8",
        "destination": "./docs/",
        "readme": "./README.md",
        "recurse": true,
        "verbose": true,
        "template": "better-docs"
    },

    "plugins": [
        "node_modules/better-docs/category",
        "plugins/markdown"
    ],

    "tags": {
        "allowUnknownTags": ["optional", "category"]
    },

    "templates": {
        "favicon": "./roxyjs-small.png",
        "better-docs": {
            "logo": "./roxyjs-small.png",
            "title": "roxy.js",
            "trackingCode": "<!-- Global site tag (gtag.js) - Google Analytics --><script async src=\"https://www.googletagmanager.com/gtag/js?id=G-YC116422QE\"></script><script>window.dataLayer = window.dataLayer || [];function gtag(){dataLayer.push(arguments);}gtag('js', new Date());gtag('config', 'G-YC116422QE');</script>",
            "css": "style.css",
            "hideGenerator": true,
            "navLinks": [
                {
                    "label": "GitHub",
                    "href": "https://github.com/colenh/roxy.js"
                },
                {
                    "label": "Discord",
                    "href": "https://discord.gg/R5GVSyTVGv"
                }
            ]
        },
        "search": true,
        "default": {
            "staticFiles": {
                "include": [
                    "./docs_include"
                ]
            }
        }
    }
}